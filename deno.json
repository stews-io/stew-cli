{
  "version": "0.0.0",
  // note: @jsxImportSource pragma seems to be needed for compile to work
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm/preact"
  },
  "fmt": {
    "useTabs": false,
    "singleQuote": true,
    "semiColons": true,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "exclude": ["no-empty-interface"]
    }
  },
  "imports": {
    "CssModule": "./declaration.d.ts",
    "npm/preact": "./source/deps/preact/mod.ts",
    "npm/preact/jsx-runtime": "./source/deps/preact/jsx-runtime.ts"
  },
  "tasks": {
    "runStewCommand": "deno run -A ./source/main.tsx",
    "writeClientBundleAssets": "deno run -A ./scripts/writeClientBundleAssets.ts"
  }
}
